<script>
  var qs = require('qs')
  var axios = require('axios')
  export default {
    data: function () {
      return {
        form: {
          ename: '',
          code: ''
        },
        status:0,
        flag:true,
        rules: {
          ename: [
            {required: true, message: '请输入员工姓名', trigger: 'blur'},
            {min: 3, max: 5, message: '长度在 3 到 20 个字符', trigger: 'blur'}
          ],
          code: [
            {required: true, message: '请输入员工编号', trigger: 'blur'}
          ]
        }
      }
    },
    methods: {
      signin() {
        this.$refs['form'].validate((valid) => {
          if (valid) {
            var that = this
            this.form.signinId=this.$route.query.signinId
            this.form.twoDimTime=this.$route.query.twoDimTime
            var param = qs.stringify(this.form)   
            console.log(param,this.form)
            if(this.flag){
              this.axios.post(this.biz.serverUrl+'rest/signin/employeeSignin',param,{headers: {'Content-Type': 'application/x-www-form-urlencoded'}}).then(function (res) {
                  console.log(res)
                  if(res.data.code == 200){
                      that.$notify({
                        message: '签到成功',
                        duration:2000,
                        type: 'success'
                      });
                      that.flag=false;
                      that.status=1;
                  }else if(res.data.code=='-1'){
                    that.$notify({
                      message: '二维码过期',
                      duration:2000,
                      type: 'error'
                    });
                    that.status=2;
                    that.flag=false;
                  }else{
                    that.$notify({
                      message: '签到失败',
                      duration:2000,
                      type: 'error'
                    });
                    that.flag=false;
                  }
              }).catch(function (res) {
                  console.log(res)
              })   
            }                  
            // console.log(param)
          } else {
            console.log('error submit!!')
            return false
          }
        })
      }
    }
  }
</script>
