      userLogin(formName) { 
        this.$refs['userForm'].validate((valid) => {
          if (valid) {
            var that = this
            var param = qs.stringify(this.userForm)
            // console.log(param)
            // that.$router.push({path: '/main'})

            this.axios.post(this.biz.serverUrl + 'rest/web/login', param, this.biz.urlencodedConfig)
            .then(function(res){
              // console.log(res);
              if (res.data.status == '200') {

                that.$emit('userSignIn', that.userForm.name,that.userForm.code)
                
                let id = res.data.element.id // 员工id

                localStorage.setItem('employeeId',id)

                // sessionStorage.setItem('name',that.userForm.name)

                // that.$router.push({path: '/personInfo',query:{id:id,element:res.data.element}})
                
                if (res.data.element.company =='' || res.data.element.department =='' || res.data.element.position =='' || res.data.element.nation =='' || res.data.element.gender =='' || res.data.element.postionYears ==''|| res.data.element.phone =='') {
                  that.$router.push({path: '/personInfo',query:{id:id,element:res.data.element}})
                }else{
                  localStorage.setItem("person",'true')
                  that.$router.push({path: '/main',query:{id:id,qrcode:that.userForm.code}})
                  console.log('员工id----' + id)
                }
                
              }else{
                Toast('用户名或编号有误')
              }
            }).catch(function (res) {
              console.log(res)
            })
          } else {
            console.log('error submit!!')
            return false
          }
        })
